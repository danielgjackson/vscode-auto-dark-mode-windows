{
	"name": "auto-dark-mode-windows",
	"displayName": "Toggle Light/Dark Theme",
	"description": "Command to toggle the theme between light/dark.",
	"repository": {
		"type": "git",
		"url": "https://github.com/danielgjackson/vscode-auto-dark-mode-windows.git"
	},
	"publisher": "danielgjackson",
	"version": "1.0.11",
	"license": "MIT",
	"engines": {
		"vscode": "^1.96.0"
	},
	"icon": "icon.png",
	"keywords": [
		"switch",
		"toggle",
		"dark",
		"light",
		"theme",
		"dark mode"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"browser": "./dist/web/extension.js",
	"extensionKind": [
		"ui"
	],
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "auto-dark-mode-windows.toggle",
				"title": "Toggle Theme"
			}
		],
		"keybindings": [
			{
				"command": "auto-dark-mode-windows.toggle",
				"key": "ctrl+alt+shift+t",
				"mac": "cmd+alt+shift+t"
			}
		],
		"configuration": {
			"title": "Toggle Light/Dark Theme"
		}
	},
	"scripts": {
		"_disabled-postinstall": "node ./node_modules/vscode/bin/install",
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "vscode-test",
		"test-old": "node ./test/runTest.js",
		"test-web": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"pretest-web": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
	},
	"devDependencies": {
		"@types/vscode": "^1.96.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"eslint": "^9.16.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",

		"@types/assert": "^1.5.11",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"mocha": "^11.0.1",
		"@vscode/test-web": "^0.0.65",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4",
		"@types/webpack-env": "^1.18.5",
		"assert": "^2.1.0",
		"process": "^0.11.10"
	},
	"_ignored-devDependencies": {
		"typescript": "^5.7.2",
		"ts-loader": "^9.5.1"
	}
}
